@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal
<h3>Add a new animal</h3>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.DateOfAdmission)
  @Html.EditorFor(model => model.DateOfAdmission, new { htmlAttributes = new { @class = "form-control", type ="date"} })
  <br>
  @Html.LabelFor(model => model.TypeOfAnimal)
  @Html.TextBoxFor(model => model.TypeOfAnimal)
  <br>
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  <br>
  <input type="submit" value="Add new animal" />
}
<p>@Html.ActionLink("Show all animals", "Index")</p>
