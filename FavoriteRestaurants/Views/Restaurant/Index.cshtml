@{
  Layout="_Layout";
}
@using FavoriteRestaurants.Models

<h1>Restaurants</h1>

@if (Model.Count == 0)
{
  <h3>There are no restaurants added.</h3>
}
else
{
  <ul class="list-unstyled">
    @foreach(Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId}) | @Html.ActionLink($"{restaurant.Cuisine.Name}", "Details", "Cuisine", new {id = restaurant.Cuisine.CuisineId}) </li>
    }
  </ul>
}
<p>@Html.ActionLink("Add restaurant", "Create")</p>