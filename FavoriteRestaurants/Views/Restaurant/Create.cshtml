@{
  Layout = "_Layout";
}
@model FavoriteRestaurants.Models.Restaurant

<h4>Add a Restaurant</h4>

@using (Html.BeginForm())
{
  <p>
    @Html.LabelFor(model => model.Name) : @Html.TextBoxFor(model => model.Name)
  </p>
  <p>
    @Html.LabelFor(model => model.PriceRange) : @Html.TextBoxFor(model => model.PriceRange)
  </p>
  <p>
    @Html.LabelFor(model => model.Rating) (Out Of 10): @Html.TextBoxFor(model => model.Rating, new { type="number", max="10"})
  </p>

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")


  <input type="submit" value="Add Restaurant">
}