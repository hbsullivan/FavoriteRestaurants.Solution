@{
  Layout = "_Layout";
}
@using FavoriteRestaurants.Models; 

<h1>Cuisines</h1>
@if (Model.Count == 0)
{
  <h3>There are no cuisines</h3>
}
else
{
  <ul class="list-unstyled">
    @foreach(Cuisine cuisine in Model)
    {
      <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a cuisine", "Create")</p>
